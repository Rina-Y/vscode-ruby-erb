{
  "name": "erb-plus",
  "displayName": "erb-plus",
  "description": "ERB syntax with tag helper and snippets",
  "version": "0.0.1",
  "publisher": "vortizhe",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onCommand:extension.toggleErb"
  ],
  "main": "./erb.js",
  "contributes": {
    "languages": [{
      "id": "ruby",
      "aliases": ["Ruby", "ruby"],
      "extensions": [".rb", ".rbx", ".rjs", "Rakefile", "rake", ".ru", "Gemfile", "Gemfile.lock", ".gemspec", ".irbrc", "Capfile", "Guardfile"],
      "configuration": "./language_configuration.ruby.json"
    }, {
      "id": "erb",
      "aliases": ["erb", "Encapsulated Ruby", "HTML Ruby"],
			"extensions": [".erb", ".rhtml", ".rhtm"],
      "configuration": "./language_configuration.erb.json"
    }],
    "grammars": [{
      "language": "ruby",
      "scopeName": "source.ruby",
      "path": "./syntaxes/ruby.tmLanguage"
    }, {
      "language": "erb",
      "scopeName": "text.html.erb",
      "path": "./syntaxes/erb.tmLanguage"
    }],
    "commands": [{
    "snippets": [{
			"language": "ruby",
			"path": "./snippets/ruby.json"
		}, {
			"language": "erb",
			"path": "./snippets/erb.json"
    }]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "vscode": "^0.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vortizhe/vscode-erb-plus.git"
  }
}